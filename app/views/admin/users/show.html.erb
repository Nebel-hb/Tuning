<h1>Admin::Users#show</h1>

  <p class="col-sm-2">会員ID：<%= @user.id %></p>


  <%= attachment_image_tag @user, :profile_image, :fill, 300, 300, format: 'jpeg', size: "300x300" , class: 'shadow mb-5 bg-white rounded'%>
    <table class="table">
        <thead>
            <tr>
              <th>名前</th>
              <th>エリア</th>
              <th>楽器</th>
              <th>自己紹介文</th>
              <th>ステータス</th>
            </tr>
        </thead>
        <tbody>
            <tr>
              <td><%= @user.name %></td>
              <td><%= @user.area.area_name %></td>
              <td><%= @user.instrument.instrument_name %></td>
              <td><%= @user.introduction %></td>
              <td><%= @user.role %></td>
            </tr>    
          </tbody>
        </table>
            <div>
            <!--%= form_with(model: @user, local: true)  do |f| %>-->
            <%= form_with(url: admin_user_path, local: true)   do |f| %>
  
                <%= f.radio_button :role, :general %>
              　<%= f.label :role, "general"  %>
              　<%= f.radio_button :role, :orchestra %>
              　<%= f.label :role, "orchestra" %>
                <%= f.submit %>
            <% end %>
            </div>    
            <%= link_to admin_orchestras_path do %>
                 <p> 一覧 </p>
            <% end %>
            
