<p><%= "ルーム名：#{@room.room_name}" %></p>
<p>参加メンバー</p>
<% @users.each do |user| %>
  <% if user.activation == true %>
     <span><%= link_to user_path(user.user_id) do %>
        <%= user.user.name %>
    <% end %></span>
  <% else %>
    <p>招待中</p>
     <span><%= link_to user_path(user.user_id) do %>
        <%= user.user.name %>
    <% end %></span>

    <% if user.user_id == current_user.id %>
      <%= form_with model: user, local: true do |f| %>
        <%= f.radio_button :activation, :true %>
      　<%= f.label :activation, "参加する"  %>
      　<%= f.hidden_field :user_id, value:current_user.id %>
        <%= f.submit %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<div class="container">
    <div class="row-12">
        <div class="col-xs-12">

            <table class="message table">
              <thead>
                <tr>

                </tr>
              </thead>
              <% @chats.each do |chat| %>
                <% if chat.user_id == current_user.id %>
                <tbody>
                  <tr>
                    <th>
                      <p style="text-align: left;"><%= chat.message %></p>
                    </th>
                  </tr>
                </tbody>
                <% else %>
                <tbody>
                  <tr>
                    <th></th>
                    <th>
                      <p style="text-align: right;"><%= chat.user.name %><%= chat.message %></p>
                    </th>
                  </tr>
                </tbody>
                <% end %>
              <% end %>
            </table>
            <% if @users.find_by(user_id: current_user.id).activation == true %>
              <%= form_with model: @chat do |f| %>
                <%= f.text_field :message %>
                <%= f.hidden_field :room_id %>
                <%= f.submit %>
              <% end %>
            <% end %>
        </div>
    </div>
</div>
