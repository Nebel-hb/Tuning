<script>
  var message = "";
    //メッセージのユーザーidを取ってくる
    var chat_user_id = <%= chat.user_id %>;
    //id="current_user"の内容を取得
    var current_user_id = $("#message").data("user_id")
    if(chat_user_id == current_user_id){
      message = '<div class="my_chat"><div class="text" id="<%=chat.id%>"><%=chat.message%></div><div class="my_text_time"><%= chat.created_at.strftime("%H:%M")%></div>';
    }else{
      message = '<div class="members_chat">'
    +'<div class="chat_image">'
    +'<%= link_to user_path(chat.user) do%>'
    +'<%=attachment_image_tag(chat.user, :profile_image, :fill, 30, 30, fallback: "public/image/no_image.png", size:'80x80', class:"profile-image")%>'
    +'<%end%>'
    +'</div>'
    +'<div class="left-text">'
    +'<div class="name"><%= chat.user.name%></div>'
    +'<div class="text" id="<%=chat.id%>"><%= chat.message%></div>'
    +'<span class="members_text_time"><%= chat.created_at.strftime("%H:%M")%></span>'
    +'</div>'
    +'</div>'
    }
    $("#message").append(message);
</script>

