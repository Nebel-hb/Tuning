
<h2>Users</h2>

<%= search_form_for@q  do |f| %>
  <%= f.label :id_eq, "ID検索" %>
  <%= f.search_field :id_eq , placeholder: "search" %>

  <%= f.label :name_cont, "名前検索" %>
  <%= f.search_field :name_cont, placeholder: "search" %>

  <%= f.label :instrument_id_eq,  "楽器"%>
  <%= f.collection_select :instrument_id_eq, Instrument.all, :id, :instrument_name, prompt: "----", required: "required", class: 'page-title', placeholder: " "%>

  <%= f.label :area_id_eq,  "地域"%>
  <%= f.collection_select :area_id_eq, Area.all, :id, :area_name, prompt: "----", required: "required", class: 'page-title', placeholder: " "%>

  <%= f.submit "search" %>
<% end %>
        <table class="table">
          <thead>
            <tr>
              <!--<th>image</th>-->
              <th><%= sort_link(@q, :name, "名前") %></th>
              <th><%= sort_link(@q,:instrument_id, "楽器") %></th>
              <th><%= sort_link(@q, :area_id, "地域") %></th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody><% @search.each do |user| %>
          <% if user.role == "general" %>
            <tr>
              <!--<td>-->
              <!--  %= attachment_image_tag user, :profile_image, format: 'jpeg', size: "40x40" %>-->
              <!--</td>-->
              <td>
                <%= link_to user_path(user) do %>
                  <%= user.name %>
                <% end %>
              </td>
              <td>
                <%= user.instrument.instrument_name %>
              </td>
              <td>
                <%= user.area.area_name %>
              </td>
            </tr>
           </div>
          </tbody>
          <% end %>
          <% end %>
        </table>
    </div>
  </div>

