<div id="title">
  <h2>Mypage</h2>
</div>

<div class="user-show-contain">
<div class="user-show-side">

 <% if @user == current_user %>
    <p><%= link_to "thank you", thank_you_comments_path %></p>
    <p><%= link_to "トークルーム", rooms_path %></p>
    <!--通知-->
    <p><%= render "public/partial/circle" %></p>
    <p><%= link_to "編集", edit_user_path(@user.id) %>
    <% unless Orchestra.pluck(:user_id).include?(current_user.id) && current_user.role == "orchestra" %>
      <p><%= link_to "公式楽団申請", new_orchestra_path %></p>
    <% end %>
  <% end %>


    <% if current_user.role == "orchestra" %>
          <p>募集中</p>
      <% @recruitments.each do |recruit| %>
        <% if recruit.user_id == current_user.id %>
          <% if  (recruit.recruit_start..recruit.recruit_end).cover? Time.now %>
          <p>募集終了</p>
                <%= render partial: "recruit_index", locals:{ recruit: recruit } %>
          <% else %>
              <div>
                <tr>
                    <%= render partial: "recruit_index", locals:{ recruit: recruit } %>
                  <td>
                    <%= link_to  recruit_users_path(recruitment: recruit.id) do %>未確認の応募<%= @recruit_user.where(recruitment_id: recruit).count %>件<% end %>
                  </td>
                </tr>
              </div>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  </div>


  <div class="orchestra-show">
  <%= attachment_image_tag @user, :profile_image, format: 'jpeg',class: "image", fallback: "public/image/no_image.png" %>
  </div>

    <div class="orchestra-show-box">
      <div class="orchestra-comment">
        <div class="orchestra-item">
          <p>会員ID</p>
          <p>名前</p>
          <p>エリア</p>
          <p>楽器</p>
          <p>自己紹介文</p>
          <p>ステータス</p>
        </div>
        <div>
          <p><%= @user.id %></p>
          <p><%= @user.name %></p>
          <p><%= @user.area.area_name %></p>
          <p><%= @user.instrument.instrument_name %></p>
          <p><%= @user.introduction %></p>
          <p><%= @user.role %></p>
        </div>
      </div>
      
<ul class="info-list">
<li><a href="#info-1" class="info"><!--リンク先は表示させたいエリアのid名を指定-->
<dl><dt>2021.5.12</dt><dd> お知らせのタイトル</dd></dl>
</a></li>
</ul>
<section id="info-1" class="hide-area"><!--表示エリアのHTML。id名にリンク先と同じ名前を指定。非表示にするためhide-areaというクラス名も指定。-->
<h2>お知らせ</h2>
<p> おしらせの内容が入ります。</p>
</section>

      <h3>参加履歴</h3>
      <% @recruit_users.each do |recruit_user| %>
        <% Recruitment.where(id: recruit_user.recruitment_id).each do |recruit| %>
          <% if recruit_user.join == 2 %>
            <% if  (recruit.recruit_start..recruit.recruit_end).cover? Time.now %>
              <div>
                <tr>
                  <%= render partial: "recruit_index", locals:{ recruit: recruit } %>

                </tr>
              </div>
            <% else %>
              <h2>参加予定</h2>
              <div>
                <tr>
                  <%= render partial: "recruit_index", locals:{ recruit: recruit } %>

                </tr>
              </div>
            <% end %>
          <% end %>
        <% end %>
      <% end %>


 </div>
    </div>
