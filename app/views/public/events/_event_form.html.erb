
<!--<div class="index_contain">-->

    <%= form_with(model: event, local: true) do |f| %>
    <div class="form-contain">
      <div class="form">
        <div class="field">
          <%= f.label :title, 'タイトル' %><br />
          <%= f.text_field :title %>
        </div>
        <div class="field">
          <%= f.label :area_id, 'area' %><br />
          <span class=" sel">
            <%= f.collection_select :area_id, Area.all, :id, :area_name, prompt: "----", required: "required", placeholder: " "%>
          </span>
        </div>

        <div class="field">
          <%= f.label :event_introduction, '説明文' %><br />
          <%= f.text_area :event_introduction %>
        </div>
      </div>

      <div class="form">
        <div class="field">
          <%= f.label :開始日時, class: 'control-label' %>
          <%= f.datetime_field :start, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :終了日時, class: 'control-label' %>
          <%= f.datetime_field :end, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :event_image, 'EventImage' %><br />
          <%= f.file_field :event_image, class: "event_image"%>
          <%= attachment_image_tag event, :event_image,format: 'jpeg', size: "80x80", fallback: "public/image/no_image.png", class: "profile_image" %>
        </div>

        <div class="field">
          <%= f.label :tag_name, 'タグ' %><br />
          <%= f.text_field :tag_name ,placeholder: "スペースで複数登録"	%>
          <%= f.hidden_field :user_id, value:current_user.id %>
        </div>
          <%= button_tag :method => :get, :class => "btn-size", id: "btn" do %>
          <p>宣伝</p>
          <% end %>
      </div>
    </div>
    <% end %>
