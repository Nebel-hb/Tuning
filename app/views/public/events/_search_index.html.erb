
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th><%= sort_link(q, :title, "タイトル") %></th>
              <th><%= sort_link(q, :area_id, "地域") %></th>
              <th><%= sort_link(q, :user_name, "開催者") %></th>
              <th>紹介文</th>
              <th><%= sort_link(q, :start, "開催開始日") %></th>
              <th><%= sort_link(q, :end, "終了日") %></th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody><% event_search.each do |event| %>

            <tr>
              <td>
                <%= attachment_image_tag event, :event_image, format: 'jpeg', size: "40x40" %>
              </td>
              <td>
                <%= event.title %>
              </td>
              <td>
                <%= event.area.area_name %>
              </td>
              <td>
                <%= event.user_id %>
              </td>
              <td>
                <%= event.event_introduction %>
              </td>
              <td>
                <%= l event.start %>
              </td>
              <td>
                <%= l event.end %>
              </td>
              <td>

                <p>コメント<%= event.comments.count %>件</p>

              </td>
              <td>
                <%= link_to event_path(event.id) do %>Show<% end %>
              </td>
            </tr>
           </div>
          </tbody>
          <% end %>

        </table>
    </div>
  </div>


