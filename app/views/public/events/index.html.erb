<h1>Public::Events#index</h1>
<h2>Events</h2>

      <%= link_to new_event_path do %>New<% end %>
<h3> タグリスト</h3>
  <% @tag_list.each do |list| %>
  <span>
    <%= link_to list.tag_name, tag_events_path(tag_id: list.id) %>
    <%= "(#{list.events.count})" %>
　</span>
　<% end %>
<hr>

        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>title</th>
              <th>area</th>
              <th>user_name</th>
              <th>event_introduction</th>
              <th>event_start</th>
              <th>event_end</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody><% @events.each do |event| %>
            <tr>
              <td>
                <%= attachment_image_tag event, :event_image, format: 'jpeg', size: "40x40" %>
              </td>
              <td>
                <%= event.title %>
              </td>
              <td>
                <!--%= event.area.area_name %>-->
              </td>
              <td>
                <%= event.user_id %>
              </td>
              <td>
                <%= event.event_introduction %>
              </td>
              <td>
                <%= event.start %>
              </td>
              <td>
                <%= event.end %>
              </td>
              <td>
                
                <p>コメント<%= event.comments.count %>件</p>
                <%= event.end %>
              </td>
              <td>
                <%= link_to event_path(event.id) do %>Show<% end %>
              </td>
            </tr>
           </div>
          </tbody>
          <% end %>

        </table>
    </div>
  </div>


