<h2>Events</h2>


<p>
検索結果
<%= @events.count %>件
</p>


<%= search_form_for(@q, url: events_path)   do |f| %>
  <%= f.label :tags_tag_name_cont, "タグ" %>
  <%= f.search_field :tags_tag_name_cont , placeholder: "search" %>
  <%= f.submit "search" %>
<% end %>

　<h3>タグ一覧</h3>
  <% @tag_list.each do |list| %>
    <% if list.events.count != 0 %>
    <span>
      <%= link_to list.tag_name, tag_event_search_path( list.id) %>
      <%= "(#{list.events.count})" %>
    </span>
    <% end %>
  <% end %>
  <br>

<%= "タグが#{@tag.tag_name}の投稿一覧" %>
<br>


        <table class="table">
          <thead>
            <tr>
              <!--<th>image</th>-->

              <th><%= sort_link(@q, :title, "タイトル") %></th>
              <th><%= sort_link(@q, :area_id, "地域") %></th>
              <th><%= sort_link(@q, :user_name, "開催者") %></th>
              <th>紹介文</th>
              <th><%= sort_link(@q, :start, "開催開始日") %></th>
              <th><%= sort_link(@q, :end, "終了日") %></th>
              <th>タグ</th>
              <th>コメント数</th>
              <th colspan="3"></th>

            </tr>
          </thead>
          <tbody><% @events.each do |event| %>

            <tr>
              <!--<td>-->
                <!--%= attachment_image_tag event, :event_image, format: 'jpeg', size: "40x40" %>-->
              <!--</td>-->
              <td>
                <%= link_to event_path(event.id) do %><%= event.title %><% end %>
              </td>
              <td>
                <%= event.area.area_name %>
              </td>
              <td>
                <%= event.user.name %>
              </td>
              <td>
                <%= truncate(event.event_introduction, length:15) %>
              </td>
              <td>
                <%= l event.start %>
              </td>
              <td>
                <%= l event.end %>
              </td>
              <td>
                <%  Instrument.where(id: recruit.instrument_id).each do |i|%>
                  <%= i.instrument_name %>
                <% end %>
              </td>
              <td>
                <p><%= event.comments.count %>件</p>
              </td>
            </tr>
           </div>
          </tbody>
          <% end %>

        </table>
    </div>
  </div>

  <% @events.each do |event| %>
  <tr>
    <td>
    <%= link_to event.title, event %>
    </td>
  </tr>
  <% end %>
<%= link_to 'イベント一覧へ', events_path %>
