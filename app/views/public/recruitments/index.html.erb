
<h2>Recruitments</h2>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>title</th>
              <th>area</th>
              <th>user_name</th>
              <th>recruit_introduction</th>
              <th>recruit_start</th>
              <th>recruit_end</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody><% @recruitments.each do |recruit| %>
          <% if recruit.user.role == "orchestra" %>
            <tr>
              <td>
                <!--%= attachment_image_tag user, :profile_image, format: 'jpeg', size: "40x40" %>-->
              </td>
              <td>
                <%= recruit.title %>
              </td>
              <td>
                <%= recruit.area.area_name %>
              </td>
              <td>
                <%= recruit.user.name %>
              </td>
              <td>
                <%= recruit.recruit_introduction %>
              </td>
              <td>
                <%= recruit.recruit_start %>
              </td>
              <td>
                <%= recruit.recruit_end %>
              </td>
              <td>
                <!--%= link_to recruitment_path(recruitement.id) do %>Show% end %>-->
              </td>
            </tr>
           </div>
          </tbody>
          <% end %>
        <% end %>
        </table>
    </div>
  </div>
