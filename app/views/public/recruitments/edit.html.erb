<h1>Public::Recruitments#edit</h1>
<p>Find me in app/views/public/recruitments/edit.html.erb</p>

<%= form_with(model: @recruitment, url: recruitment_path, local: true, method: :put) do |f| %>

  <%= f.label :title, 'タイトル', class: 'col-sm-3 col-form-label page-title ' %>
  <%= f.text_field :title, class: 'form-control last_name page-title' %>

    <%= f.label :area_id, 'エリア' %>
  <%= f.collection_select :area_id, Area.all, :id, :area_name, prompt: "----", required: "required", class: 'page-title', placeholder: " "%>


  <%= f.label :recruit_introduction, '説明文', class: 'col-sm-3 col-form-label page-title' %>
  <%= f.text_area :recruit_introduction, class: 'form-control email page-title' %>


  <%= f.submit %>
  <% end %>

